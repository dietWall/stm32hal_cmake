{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		},
		{
			"type": "shell",
			"label": "Start Serial Monitor",
			"command": [
				"source", "/home/developer/workspace/.venv/bin/activate", "&&",
				"/home/developer/workspace/tests/lib/serial_monitor.py"
			],
			"problemMatcher": []
		},
		{
			"label": "Connect to exported serial interface",
			"type": "process",
			"command": "socat",
			"args": ["PTY,link=/home/developer/workspace/tty1,raw,echo=0", "tcp:dw-latitude-e6440:3002&"], //socat PTY,link=/home/developer/workspace/tty1,raw,echo=0 tcp:${input:hostname}:3002
			"isBackground": true,
			"problemMatcher": []
		}
	],
	"inputs": [
        {
            "id": "hostname",
            "type": "promptString",
            "description": "input for a hostname with connected mcu"
        }
	]
}